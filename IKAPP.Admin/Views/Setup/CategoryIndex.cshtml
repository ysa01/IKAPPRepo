@{
    ViewBag.Title = "CategoryIndex";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@model List<IKAPP.DAL.DB.Category>

<div class="card">
    <div class="card-body">
        <h5 class="card-title float-left">Kategori Listesi</h5>
        <a class="btn btn-success float-right mb-1" href="/Setup/CategoryInsert"><i class="fa fa-plus"></i> Kategori Ekle</a>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Kategori Adı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.ID</td>
                            <td>@item.CategoryName</td>
                            <td><a href="/Setup/CategoryUpdate/@item.ID" class="btn btn-danger"><i class="fa fa-info"></i> Detay Gör</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>