
@{
    ViewBag.Title = "CategoryUpdate";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@model IKAPP.DAL.DB.Category
<div class="row">
    <div class="col-12">
        <div class="card">
            <form class="form-horizontal" action="/Setup/CategoryUpdate" method="post">
                <div class="card-body">
                    <h4 class="card-title">Kategori Güncelleme Sayfası</h4>
                    <input type="text" name="ID"  value="@Model.ID" hidden />
                    <div class="form-group row">
                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Kategori Adı :</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="CategoryName" id="fname" value="@Model.CategoryName" placeholder="Kategori Adı Giriniz..." required>
                        </div>
                    </div>
                </div>
                <div class="border-top">
                    <div class="card-body">
                        <button type="submit" class="btn btn-warning"><i class="fa fa-edit"></i> Güncelle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
