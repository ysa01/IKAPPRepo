
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@model List<IKAPP.DAL.DB.Order>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Ürün  Listesi</h5>
        @if (TempData["mesaj"] != null)
        {
            if ((string)TempData["mesaj"] == "İşlem Başarılı")
            {
                <span class="badge badge-success">İşlem Başarılı</span>
            }
            else
            {
                <span class="badge badge-danger">İşlem Başarısız</span>
            }
        }
        else
        {
            <span hidden></span>
        }


        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Satışı Yapan</th>
                        <th>Ürün Adı</th>
                        <th>Satış Fiyatı</th>
                        <th>Adet</th>
                        <th>Müşteri Adı - Soyadı</th>
                        <th>Müşteri Telefon</th>
                        <th>Sipariş Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.Employee.FirstName @item.Employee.LastName</td>
                            <td>@item.Product.ProductName</td>
                            <td>@item.Price</td>
                            <td>@item.Piece</td>
                            <td>@item.Customer.FirstName @item.Customer.LastName</td>
                            <td>@item.Customer.Phone</td>
                            <td>@item.OrderDate</td>
                            <td><a href="/Order/Update/@item.ID" class="btn btn-danger"><i class="fa fa-info"></i> Detay Gör</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>