
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@model List<IKAPP.DAL.DB.Product>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Ürün  Listesi</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Ürün Adı</th>
                        <th>Kategorisi</th>
                        <th>Satış Fiyatı</th>
                        <th>Alış Fiyatı</th>
                        <th>Kdv Oranı</th>
                        <th>Stok Adedi</th>
                        <th>Kritik Stok</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.ProductName</td>
                            <td>@item.Category.CategoryName</td>
                            <td>@item.SellPrice ₺</td>
                            <td>@item.BuyPrice ₺</td>
                            <td>@item.Tax</td>
                            <td>@item.Stock</td>
                            <td>
                                @if (item.CriticalStatus == false)
                                {
                                    <span class="badge badge-success">Stokta Var </span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Stokta Yok </span>

                                }
                            </td>
                            <td><a href="/Product/Update/@item.ID" class="btn btn-danger"><i class="fa fa-info"></i> Detay Gör</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>