@{
    ViewBag.Title = "Müşteri Listesi";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    string sonuc;
    if ((string)TempData["mesaj"] != null && (string)TempData["mesaj"] != "")
    {
        sonuc = "İşlem Başarılı";
    }
    else
    {
        sonuc = "";
    }
}

@model List<IKAPP.DAL.DB.Customer>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Müşteri Listesi</h5>
        @if (sonuc == "İşlem Başarılı")
        {
            <span class="badge badge-success">@sonuc</span>
        }
        else
        {
            <span hidden></span>
        }

        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Telefon</th>
                        <th>Email</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td><a href="/Customer/Update/@item.ID" class="btn btn-danger"><i class="fa fa-info"></i> Detay Gör</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
